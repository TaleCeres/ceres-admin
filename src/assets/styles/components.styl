//编辑器渲染
.quill-editor {
  min-height 640px
}

.ql-editor {
  min-height 440px

  img {
    width 100%
  }

  video {
    width 100%
  }
}

//组件card
.card {
  margin-top 10px
  padding-bottom 15px
  background-color #ffffff

  .card-header {
    text-align left
    padding 18px 33px

    .card-header__title {
      font-size 24px
      font-weight bold
      color: #4D4D4D
    }

    .card-header__more {
      float right
      font-size 18px
      cursor pointer
    }
  }

  .card-header::after {
    content: '';
    clear: both;
    display: block;
    visibility: hidden;
    height: 0;
  }

  .card-body {
    padding 15px 55px
  }
}

//option -box
.option-item-box {
  &::-webkit-scrollbar {
    display: none;
  }
  padding 20px
  overflow-y auto
  height 100%

  .option-list {
  }

  .option-item {
    margin-bottom 20px
    padding 15px 5px
    border 3px solid #e3e6e7
    position relative

    .delete {
      display none
    }

    &:hover {
      .delete {
        display block
        position absolute
        top -10px
        right -10px
        font-size 20px
        border-radius 50%
      }
    }

    .img {
      width 100%
      height 80%

      img {
        width 100%
        max-height 150px
      }
    }

    .select-img {
      text-align center
      line-height 120px
    }
  }

  .btn {
    margin-top 20px
  }
}
  // 页面list
.page-card {
  width 220px
  margin-right 30px
  margin-bottom 30px
  background-color #E6E6E6
  &.publish{
    background #EEFAFF
  }
  &.expired{
    background #FFE9E9
  }
  .time {
    font-size: 13px;
    color: #999;
    padding-top 5px
    cursor pointer
    &:hover {
      color: #409Eff
    }
  }
  .image {
    position relative
    height 352px
    background-color #fff
    .img-mask{
      display none
    }
    &:hover{
      .img-mask {
        position absolute
        display block
        line-height 350px
        text-align center
        width 200px;
        height 352px
        background-color rgba(0, 0, 0, 0.5)
      }
    }
    img {
      width: 100%
      height 100%
    }
  }
  .clearfix:before,
  .clearfix:after {
    display: table;
    content: "";
    clear: both
  }
  .name {
    cursor pointer
    display inline-block
    width 100px
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap
    line-height 24px
    &:hover {
      color: #409Eff
    }
  }
}
